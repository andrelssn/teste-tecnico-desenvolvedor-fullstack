generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Produto {
  id           Int      @id @default(autoincrement())
  nome         String
  preco        Float
  estoque      Int
  dataCriacao  DateTime @default(now())
}

model Cliente {
  id           Int      @id @default(autoincrement())
  nome         String
  email        String   @unique
  dataCriacao  DateTime @default(now())
}